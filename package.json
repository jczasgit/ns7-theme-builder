{
  "name": "ns-7-theme-builder",
  "version": "0.0.3",
  "description": "Nativescript 7 theme builder",
  "main": "./lib/index.js",
  "bin": {
    "nstheme": "lib/index.js"
  },
  "types": "./lib/index.d.ts",
  "files": [
    "./lib/**/*"
  ],
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "build": "tsc -p .",
    "test": "jest --config jestconfig.json",
    "create": "npm run test && npm run build",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepublish": "npm run test && npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "preversion": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jczasgit/ns7-theme-builder.git"
  },
  "keywords": [
    "Nativescript",
    "Theme",
    "Builder",
    "cli",
    "CLI",
    "ns7",
    "NS7"
  ],
  "author": "Juan Carlos Wu <jcwuchen00@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jczasgit/ns7-theme-builder/issues"
  },
  "homepage": "https://github.com/jczasgit/ns7-theme-builder#readme",
  "dependencies": {
    "chalk": "^4.1.0",
    "clear": "^0.1.0",
    "commander": "^7.2.0",
    "figlet": "^1.5.0",
    "inquirer": "^8.0.0",
    "invert-color": "^2.0.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/clear": "^0.1.1",
    "@types/figlet": "^1.2.1",
    "@types/inquirer": "^7.3.1",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.36",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.3"
  }
}
